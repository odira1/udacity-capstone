{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "**/coverage",
    "**/dist",
    "**/node_modules",
    "**/*.config.js",
    "node_modules/**"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "no-unused-vars": "error",
    "quotes": [2, "double"]
  }
}
